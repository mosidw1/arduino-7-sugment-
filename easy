int a = 13,b =12 ,c =11 ,d =10 ,e =9,f =8,g=7;
void off()
{
  for(int i = 13;i>=7;i--)
  {
    
      digitalWrite(i,HIGH);
   
  }
}

void zero ()
{
  for(int i = 13;i>=7;i--)
  {
    if(i==7)
    {
      digitalWrite(i,HIGH);
    }
    else
    {
      digitalWrite(i,LOW);
    }
    
  }
  
}
void one()
{
  for(int i = 13;i>=7;i--)
  {
    if(i==8||i==9)
    {
      digitalWrite(i,LOW);
    }
    else
    {
      digitalWrite(i,HIGH);
    }
    
    
  
  }
}

void two()
{
  for(int i = 13;i>=7;i--)
  {
